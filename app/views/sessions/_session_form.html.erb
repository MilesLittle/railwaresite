<div class="container justify-content-center">
<%= form_with(url: login_path, method: :post) do |form| %>
  <% session[:previous_url] = request.referer unless request.referer == login_url %>
  <% if flash[:alert].present? %>
  <div style="color: red">
    <%= flash[:alert] %>
  </div>
<% end %>
  <div>
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <%= form.submit 'Login' %>
<% end %>
</div>